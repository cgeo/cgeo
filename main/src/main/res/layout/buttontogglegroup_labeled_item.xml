<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:id="@+id/item_text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_togglebuttongroup"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:lines="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
	        android:textSize="@dimen/textSize_detailsPrimary"
            android:textColor="@color/colorText"/>
        <ImageView
            android:id="@+id/item_info"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/settings_info"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/item_text"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <cgeo.geocaching.ui.ButtonToggleGroup
        android:id="@+id/item_togglebuttongroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
