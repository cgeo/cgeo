<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp" >

    <TextView
        android:id="@+id/info_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_detailsPrimary"
        android:layout_marginTop="10dp"
        android:text="@string/restore_information" />

    <CheckBox
        android:layout_marginTop="5dp"
        android:id="@+id/database_check_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/init_backup_caches" />

    <CheckBox
        android:layout_marginTop="5dp"
        android:id="@+id/settings_check_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/init_backup_program_settings" />


    <TextView
        android:id="@+id/warning"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_detailsPrimary"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>
</LinearLayout>
