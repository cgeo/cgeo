<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_horizontal"
        android:layout_toLeftOf="@id/filter"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_toolbarPrimary"
        android:textColor="@color/colorTextActionBar" />

    <EditText
        style="@style/textinput_embedded"
        android:id="@+id/filter"
        android:hint="@string/caches_filter_title"
        android:inputType="text|none"
        android:textSize="@dimen/textSize_toolbarSecondary"
        android:visibility="gone" />

</RelativeLayout>
