<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageview_viewroot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dip"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:context=".ImageViewActivity">

    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <ImageView
            android:id="@+id/image_full"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:padding="1dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:src="@drawable/cgeo_notification"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/imageview_headline"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackgroundTransparent">

        <ImageView
            android:id="@+id/imageview_backbutton"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView android:id="@+id/imageview_position"
            style="@style/text_label"
            android:textSize="@dimen/textSize_buttonsDouble"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            android:gravity="center_vertical"
            tools:text="4/25"
            android:layout_toRightOf="@+id/imageview_backbutton"/>

        <TextView android:id="@+id/imageview_category"
            style="@style/text_label"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize_buttonsDouble"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            tools:text="Listing"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView android:id="@+id/imageview_information"
        style="@style/text_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundTransparent"
        android:layout_above="@+id/imageview_actions"/>

    <LinearLayout
        android:id="@+id/imageview_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBackgroundTransparent"
        android:layout_alignParentBottom="true">

        <Button
            style="@style/button_icon_actionbar"
            android:id="@+id/image_open_file"
            android:enabled="true"
            app:icon="@drawable/ic_menu_info_details"
            android:text="@string/cache_image_open_file" />
        <Button
            style="@style/button_icon_actionbar"
            android:id="@+id/image_open_browser"
            android:enabled="true"
            app:icon="@drawable/ic_menu_info_details"
            android:text="@string/cache_image_open_browser" />
        <Button
            style="@style/button_icon_actionbar"
            android:id="@+id/image_share"
            android:enabled="true"
            app:icon="@drawable/ic_menu_share"
            android:text="Share" />

    </LinearLayout>

</RelativeLayout>


